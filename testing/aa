import os
from markdown import markdown
from docx import Document
from docx.shared import Pt
from docx.enum.text import WD_ALIGN_PARAGRAPH
from docx.oxml.ns import qn
from docx.oxml import OxmlElement
import pypandoc

# Set the folder path for temp markdown files
TEMP_MD_PATH = r"C:\Users\naveen.jagadeesan\Desktop\Naveen_repoagent\temp_files"

def get_all_md_files(path):
    """Retrieve all markdown files from the given path."""
    md_files = []
    for root, _, files in os.walk(path):
        for file in files:
            if file.endswith(".md"):
                md_files.append(os.path.join(root, file))
    return md_files

def merge_markdown_to_docx(md_files, output_file):
    """Convert markdown files to a merged DOCX file."""
    # Convert markdown files to a single DOCX
    pypandoc.convert_file(md_files, 'docx', outputfile=output_file)
    print(f"Merged DOCX created at: {output_file}")

def add_cover_page_and_toc(doc, title, author):
    """Add a cover page and TOC to the given DOCX document."""
    # --- Cover Page ---
    title_paragraph = doc.add_paragraph()
    title_run = title_paragraph.add_run(title)
    title_run.bold = True
    title_run.font.size = Pt(28)
    title_paragraph.alignment = WD_ALIGN_PARAGRAPH.CENTER

    # Add space and author
    doc.add_paragraph().add_run("\n")
    author_paragraph = doc.add_paragraph()
    author_run = author_paragraph.add_run(f"Author: {author}")
    author_run.font.size = Pt(16)
    author_paragraph.alignment = WD_ALIGN_PARAGRAPH.CENTER

    # Page break after cover page
    doc.add_page_break()

    # --- TOC ---
    paragraph = doc.add_paragraph()
    run = paragraph.add_run("Table of Contents")
    run.bold = True
    run.font.size = Pt(20)
    paragraph.alignment = WD_ALIGN_PARAGRAPH.CENTER

    # Add TOC field
    toc_paragraph = doc.add_paragraph()
    fld_simple = OxmlElement('w:fldSimple')
    fld_simple.set(qn('w:instr'), 'TOC \\o "1-3" \\h \\z \\u')
    toc_paragraph._element.append(fld_simple)

    # Page break after TOC
    doc.add_page_break()

def generate_docs(folder):
    """Main function to generate the DOCX with cover and TOC."""
    output_file = os.path.join(folder, "final_output.docx")
    md_files = get_all_md_files(folder)

    if not md_files:
        print("No markdown files found in the specified folder.")
        return

    # Merge markdown files into a single DOCX
    merge_markdown_to_docx(md_files, output_file)

    # Open the merged DOCX and add cover page and TOC
    doc = Document(output_file)
    add_cover_page_and_toc(doc, "My Project Documentation", "Naveen Jagadeesan")

    # Save the final DOCX with cover and TOC
    doc.save(output_file)
    print(f"Final DOCX with cover page and TOC saved at: {output_file}")

# --- Execute the function ---
if __name__ == "__main__":
    generate_docs(TEMP_MD_PATH)
